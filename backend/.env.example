# Ambiente da aplicação: development | production
APP_ENV=development

# Banco de dados
# Desenvolvimento local (SQLite):
DATABASE_URL=sqlite:///./local.db

# Produção (exemplo PostgreSQL/Supabase):
# DATABASE_URL=postgresql://USUARIO:SENHA@HOST:PORTA/NOME_BANCO
# Neon (recomendado incluir SSL):
# DATABASE_URL=postgresql://USUARIO:SENHA@HOST:5432/NOME_BANCO?sslmode=require

# Segurança JWT (mínimo recomendado: 32 caracteres)
SECRET_KEY=troque-esta-chave-por-uma-chave-segura-com-32-ou-mais-caracteres

# CORS (opcional): lista de origens separadas por vírgula
# Ex.: https://controle-presos.vercel.app,https://preview-xyz.vercel.app
CORS_ALLOWED_ORIGINS=

# Segredo para endpoints de job/cron (obrigatório para /api/jobs/check-alertas)
# Pode ser enviado por header Authorization/X-Cron-Secret ou por query string ?secret=
CRON_SECRET=troque-este-segredo-por-um-valor-forte

# Integração DataJud (opcional)
DATAJUD_API_URL=
DATAJUD_API_TOKEN=

# Integração PJe (opcional)
PJE_API_URL=
PJE_API_TOKEN=

# Integração de dados pessoais por CPF (opcional)
CPF_API_URL=
CPF_API_TOKEN=

# Notificações por e-mail (opcional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=
SMTP_USE_TLS=true

# Criação do primeiro admin (opcional para script create_first_admin.py)
FIRST_ADMIN_NOME=
FIRST_ADMIN_CPF=
FIRST_ADMIN_EMAIL=
FIRST_ADMIN_SENHA=
